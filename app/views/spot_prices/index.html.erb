<div>
  <div>
    <h1>
      List of all spot prices
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new spot price
    </h2>

    <form action="/insert_spot_price" method="post">
      <div>
        <label for="date_box">
          Date
        </label>

        <input type="date" id="date_box" name="query_date">
      </div>

      <div>
        <label for="wti_box">
          Wti
        </label>

        <input type="text" id="wti_box" name="query_wti">
      </div>

      <div>
        <label for="brent_box">
          Brent
        </label>

        <input type="text" id="brent_box" name="query_brent">
      </div>

      <div>
        <label for="nyh_conv_box">
          Nyh conv
        </label>

        <input type="text" id="nyh_conv_box" name="query_nyh_conv">
      </div>

      <div>
        <label for="usgc_conv_box">
          Usgc conv
        </label>

        <input type="text" id="usgc_conv_box" name="query_usgc_conv">
      </div>

      <div>
        <label for="rbob_box">
          Rbob
        </label>

        <input type="text" id="rbob_box" name="query_rbob">
      </div>

      <div>
        <label for="no_2_heating_oil_box">
          No 2 heating oil
        </label>

        <input type="text" id="no_2_heating_oil_box" name="query_no_2_heating_oil">
      </div>

      <div>
        <label for="nyh_usld_box">
          Nyh usld
        </label>

        <input type="text" id="nyh_usld_box" name="query_nyh_usld">
      </div>

      <div>
        <label for="usgc_usld_box">
          Usgc usld
        </label>

        <input type="text" id="usgc_usld_box" name="query_usgc_usld">
      </div>

      <div>
        <label for="la_usld_box">
          La usld
        </label>

        <input type="text" id="la_usld_box" name="query_la_usld">
      </div>

      <div>
        <label for="usgc_kero_box">
          Usgc kero
        </label>

        <input type="text" id="usgc_kero_box" name="query_usgc_kero">
      </div>

      <div>
        <label for="mv_propane_box">
          Mv propane
        </label>

        <input type="text" id="mv_propane_box" name="query_mv_propane">
      </div>

      <button>
        Create spot price
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Date
        </th>

        <th>
          Wti
        </th>

        <th>
          Brent
        </th>

        <th>
          Nyh conv
        </th>

        <th>
          Usgc conv
        </th>

        <th>
          Rbob
        </th>

        <th>
          No 2 heating oil
        </th>

        <th>
          Nyh usld
        </th>

        <th>
          Usgc usld
        </th>

        <th>
          La usld
        </th>

        <th>
          Usgc kero
        </th>

        <th>
          Mv propane
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_spot_prices.each do |a_spot_price| %>
      <tr>
        <td>
          <%= a_spot_price.id %>
        </td>

        <td>
          <%= a_spot_price.date %>
        </td>

        <td>
          <%= a_spot_price.wti %>
        </td>

        <td>
          <%= a_spot_price.brent %>
        </td>

        <td>
          <%= a_spot_price.nyh_conv %>
        </td>

        <td>
          <%= a_spot_price.usgc_conv %>
        </td>

        <td>
          <%= a_spot_price.rbob %>
        </td>

        <td>
          <%= a_spot_price.no_2_heating_oil %>
        </td>

        <td>
          <%= a_spot_price.nyh_usld %>
        </td>

        <td>
          <%= a_spot_price.usgc_usld %>
        </td>

        <td>
          <%= a_spot_price.la_usld %>
        </td>

        <td>
          <%= a_spot_price.usgc_kero %>
        </td>

        <td>
          <%= a_spot_price.mv_propane %>
        </td>

        <td>
          <%= time_ago_in_words(a_spot_price.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_spot_price.updated_at) %> ago
        </td>

        <td>
          <a href="/spot_prices/<%= a_spot_price.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
