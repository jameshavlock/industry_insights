<div>
  <div>
    <h1>
      List of all padds
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new padd
    </h2>

    <form action="/insert_padd" method="post">
      <button>
        Create padd
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_padds.each do |a_padd| %>
      <tr>
        <td>
          <%= a_padd.id %>
        </td>

        <td>
          <%= time_ago_in_words(a_padd.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_padd.updated_at) %> ago
        </td>

        <td>
          <a href="/padds/<%= a_padd.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
